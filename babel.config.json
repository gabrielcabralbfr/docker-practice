{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "current"
                }
            }
        ],
        "@babel/preset-typescript"
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "alias": {
                    "@config": "./src/config",
                    "@models": "./src/models",
                    "@controllers": "./src/controllers",
                    "@repository": "./src/repository",
                }
            }
        ]
    ],
    "ignore": ["**/*.spec.ts"]
}